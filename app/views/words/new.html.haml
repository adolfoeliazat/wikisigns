- content_for :main_control do
  = render 'form'

- content_for :flow_menu do
  = render 'shared/game_menu'
  .button-link= link_to_function t(:go), "$('#new_word').submit()", 'data-tooltip' => t('tooltip.go')

#word
%h1#title

- content_for :mode_script do
  - if action_name == 'communication'
    :javascript
      $(document).ready(setCommunicationMode);
  - else
    :javascript
      $(document).ready(setAnalyzeMode);
