#main
  %h1= @word.word

  = render(:partial => 'table', :locals => {:word => @word})

  %h2 Einfach was eingeben:
  = form_for @word do |f|
    = f.text_field :word
    = f.hidden_field :next_word, :value => @word.id if 'show'.eql?action_name
    = f.submit "Flieg los!"


  - latest_words.each do |word|
    = render(:partial => 'table', :locals => {:word => word})