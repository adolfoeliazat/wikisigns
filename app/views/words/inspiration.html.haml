- content_for :mode_script do
  = javascript_include_tag 'inspiration'

#inspiration-content
  #inspiration-links
    = link_to '[X]', :back
  - index = 0
  - @words.each_with_index do |word, index|
    .sign{:id => "sign-#{index}"}
      .one-word{:data => {'word-word' => word.word}}
        .word
