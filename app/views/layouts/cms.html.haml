!!!
%html{:lang => 'en', 'xmlns:og' => 'http://ogp.me/ns#', 'xmlns:fb' => 'http://www.facebook.com/2008/fbml'}
  %head
    %meta{:charset => "UTF-8"}

    <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame -->
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}

    %title= t('title.wikisigns')

    = csrf_meta_tag

    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection, print'

  %body
    <!-- Main Content -->
    #container
      #menu-container
        #main-menu
          = render 'shared/main_menu'
          = content_for :main_menu
        #context-menu= content_for :context_menu
      #cms-container= yield

    <!-- JavaScript at the bottom for fast page loading -->
    = javascript_include_tag :defaults

    = render 'shared/javascripts'
    #fb-root
    = render 'shared/facebook_scripts'
    = content_for :mode_script

    = hoptoad_javascript_notifier if Object.const_defined?(:HoptoadNotifier)
