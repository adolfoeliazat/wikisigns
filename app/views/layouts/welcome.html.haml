!!!
%html{:lang => 'en'}
  %head
    %meta{:charset => "UTF-8"}

    <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame -->
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}

    %title= t('title.wikisigns')

    = csrf_meta_tag

    = stylesheet_link_tag 'compiled/welcome.css', :media => 'screen, projection, print'

  %body
    #container.fullscreen
      #menu-container
        #main-menu
          = render 'shared/main_menu'
          = content_for :main_menu
        #context-menu= content_for :context_menu
      #main-container
        #main-control= content_for :main_control
        #main-sign= yield
      #flow-container
        #flow-menu= content_for :flow_menu
        #side-bar= content_for :side_bar

    <!-- JavaScript at the bottom for fast page loading -->
    = javascript_include_tag :defaults

    = render 'shared/javascripts'
    :javascript
      $(document).ready(setWelcomeMode)

    = hoptoad_javascript_notifier if Object.const_defined?(:HoptoadNotifier)
