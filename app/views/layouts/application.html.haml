!!!
%html
  %head
    %title WikiSigns
    = csrf_meta_tag
    - if is_facebook_request?
      = stylesheet_link_tag 'compiled/facebook.css', :media => 'screen, projection, print'
    - else
      = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection, print'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
  %body
    = render 'shared/flash_messages'
    = render 'shared/login'
    #container
      #top-container
        #top-container-scroll
          = render 'shared/latest'
      #left-container
        = yield
      #right-container
        #user-pics-container
          %h1
            Deine Worte
          #your-words
    = javascript_include_tag :defaults
    = javascript_include_tag 'raphael/raphael', 'raphael/word'
